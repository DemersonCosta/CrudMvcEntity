<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Quiron Loja Virtual</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/ErroEstilo.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <a class="navbar-brand" href="#">Quiron Loja Virtual - Seu esporte é aqui</a>
            @Html.Action("Resumo", "Carrinho")
        </div>
    </div>

    <div class="row panel-info">
        <div class="container">
            <div id="categorias" class="col-md-3 col-xs-3">
                @Html.Action("Menu","Categoria")
            </div>


            <div id="categorias" class="col-md-8 col-xs-8">
                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - Demerson Costa</p>
                </footer>
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-2.0.0.min.js"></script>   
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>

